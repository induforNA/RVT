<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/participant_no"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/radio_button_no"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/participant_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/string_name"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/participant_occupation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/string_occupation"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/participant_gender"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/string_gender"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/participant_age"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/string_age"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/participant_education"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/string_years_of_education"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_delete_black_24dp"/>

    </RelativeLayout>

    <View
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="#868686"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>