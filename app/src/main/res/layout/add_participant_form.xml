<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text_participant"
        android:layout_gravity="center"
        android:hint="@string/name_of_participant"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_text_occupation"
        android:layout_gravity="center"
        android:hint="@string/string_occupation"
        android:layout_width="300dp"
        android:singleLine="true"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_text_gender"
        android:layout_gravity="center"
        android:hint="@string/string_gender"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:id="@+id/edit_text_age"
        android:layout_gravity="center"
        android:hint="@string/string_age"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:id="@+id/edit_text_education"
        android:layout_gravity="center"
        android:hint="@string/string_years_of_education"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/popup_cancel"
            android:textAllCaps="false"
            android:text="@string/button_cancel"
            android:backgroundTint="#29b7ab"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save_participant"
            android:textAllCaps="false"
            android:backgroundTint="#29b7ab"
            android:textColor="#ffffff"
            android:text="@string/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>