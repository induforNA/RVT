<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text_specify_unit"
        android:layout_gravity="center"
        android:hint="Specify unit"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textfield_size"
        android:layout_marginTop="10dp"
        android:text="Convert unit to international unit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/layout_1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfield_size"
            android:layout_gravity="center_horizontal"
            android:text="1"/>

        <TextView
            android:id="@+id/edit_text_specify_unit_1_1"
            android:text="specified unit"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfield_size"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:text="="/>

        <EditText
            android:id="@+id/edit_text_set_unit_1"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_unit_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_swap_1"
            android:layout_marginLeft="20dp"

            android:src="@drawable/ic_swap_horiz_black_36dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/layout_2"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfield_size"
            android:layout_gravity="center_horizontal"
            android:text="1"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_unit_2"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfield_size"
            android:layout_gravity="center_horizontal"
            android:text="="/>

        <EditText
            android:id="@+id/edit_text_set_unit_2"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_specify_unit_1_2"
            android:hint="specified unit"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/button_swap_2"
            android:src="@drawable/ic_swap_horiz_black_36dp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/popup_cancel"
            android:textAllCaps="false"
            android:text="@string/button_cancel"
            android:backgroundTint="#29b7ab"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save_participant"
            android:textAllCaps="false"
            android:backgroundTint="#29b7ab"
            android:textColor="#ffffff"
            android:text="@string/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>