                            android:id="@+id/gps_loc_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/gps_coordinates_dms"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                </LinearLayout>

