<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_menu_black_36dp" />
            <!--<TextView-->
            <!--android:textColor="#000000"-->
            <!--android:layout_marginRight="56dp"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:textSize="30sp"-->
            <!--android:gravity="center"-->
            <!--android:text="Start Servey"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="question?"
                android:textColor="#000000"
                android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/checkboxgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/option_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="slectedLandKind"
                    android:text="option 1"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/option_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="slectedLandKind"
                    android:text="Cropland"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/option_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="slectedLandKind"
                    android:text="Pastureland"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/option_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="slectedLandKind"
                    android:text="Mining land"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/option_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="slectedLandKind"
                    android:text="Mining land"
                    android:textSize="30sp" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/radiobuttongroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/option_a_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 1"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/option_b_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 2"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/option_c_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 3"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/option_d_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 4"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/option_e_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 4"
                    android:textSize="30sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <include
        android:id="@+id/left_drawer"
        layout="@layout/navigation_drawer_menu" />
</android.support.v4.widget.DrawerLayout>