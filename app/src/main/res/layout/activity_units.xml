<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sayone.omidyar.view.UnitsActivity">

    <LinearLayout
        android:elevation="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_units"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/heading_size"
        android:layout_gravity="center"
        android:id="@+id/textView2" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_new_units"
        android:textSize="@dimen/textfield_size"
        android:gravity="left"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:text="Enter new units"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/edit_existing_units"
        android:textSize="@dimen/textfield_size"
        android:gravity="left"
        android:text="Edit existing units"/>

    </LinearLayout>

</LinearLayout>
